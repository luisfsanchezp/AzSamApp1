@page
@model MatriculaFormModel

@{
    ViewData["Title"] = "Formulario de Matrícula";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg p-4" style="width: 500px; border-radius: 15px;">

        <h2 class="text-center mb-4">Formulario de Matrícula</h2>

        <form method="post" action="/Matricula/Guardar">

            <!-- Programa -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Programa</label>
                <select class="form-select" name="Programa" required>
                    @foreach (var p in Model.Programas)
                    {
                        <option value="@p">@p</option>
                    }
                </select>

            </div>



            <!-- Estudiante -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Nombre de Estudiante</label>
                <input type="text" class="form-control" name="IdEstudiante"
                    placeholder="Ingresa el nombre del estudiante" required>
            </div>

            <!-- Valor Matrícula -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Valor Matrícula</label>
                <input type="number" step="0.01" class="form-control" name="Valor" placeholder="Ej: 850000" required>
            </div>

            <!-- Periodo -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Periodo</label>
                <select class="form-select" name="Periodo" required>
                    @foreach (var per in Model.Periodos)
                    {
                        <option value="@per">@per</option>
                    }
                </select>

            </div>

            <!-- Descripción -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Formulario Matrícula (descripción)</label>
                <textarea class="form-control" name="FormularioMatricula" rows="4"
                    placeholder="Describe detalles de la matrícula..." required></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2">
                Guardar Matrícula
            </button>
        </form>
    </div>
</div>